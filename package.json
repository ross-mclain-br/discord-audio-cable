{
  "$schema": "https://json.schemastore.org/package",
  "name": "discord-audio-cable",
  "version": "1.1.3",
  "description": "An audio streaming Discord bot",
  "author": "Victor Andrade de Almeida",
  "license": "MIT",
  "keywords": [
    "discord",
    "bot",
    "audio",
    "stream"
  ],
  "main": "dist/index.js",
  "scripts": {
    "start": "env NODE_ENV=development electron .",
    "lint": "eslint .",
    "format": "prettier -w .",
    "build": "rm -rf dist && tsc",
    "package": "electron-builder"
  },
  "dependencies": {
    "@discordjs/voice": "^0.18.0",
    "discord.js": "^14.16.2",
    "express": "^4.21.0",
    "ffmpeg-static": "^5.2.0",
    "libsodium-wrappers": "^0.7.15",
    "opusscript": "^0.0.8",
    "prism-media": "^1.3.5",
    "yt-stream": "^1.7.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "electron": "^37.2.1",
    "electron-builder": "^26.0.18",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "typescript-eslint": "^8.36.0"
  },
  "build": {
    "appId": "com.vctandrade.discord-audio-cable",
    "directories": {
      "output": "release"
    },
    "extraResources": [
      "./icon.ico"
    ],
    "win": {
      "target": "portable",
      "icon": "./icon.ico"
    }
  }
}
